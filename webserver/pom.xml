	  </dependency>
	  <dependency>
	  	<groupId>com.meizu</groupId>
	    <artifactId>aop</artifactId>
	    <version>1.0.1-SNAPSHOT</version>
	  </dependency>
	  <dependency>
	  	<groupId>com.meizu</groupId>
	    <artifactId>dao</artifactId>
	    <version>1.0.1-SNAPSHOT</version>
	  </dependency>
	  <dependency>
