<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  version="2.5"  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>startup</servlet-name>
    <servlet-class>com.chaoxing.home.system.StartUpServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <filter>
    <filter-name>SecurityFilter</filter-name>
    <filter-class>com.duxiu.framework.mvc.SecurityFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  
  <error-page>
    <error-code>403</error-code>
    <location>/errors/error_403.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/errors/error_404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/errors/error_500.jsp</location>
  </error-page>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>
