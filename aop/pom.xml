<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.meizu</groupId>
    <artifactId>simplify-framework</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <artifactId>aop</artifactId>
  <name>切面组件</name>
  <description>动态字节码生成方式</description>
  <dependencies>
  	<dependency>
  		<groupId>com.meizu</groupId>
  		<artifactId>utils</artifactId>
  		<version>0.0.1-SNAPSHOT</version>
  	</dependency>
  	<dependency>
  		<groupId>com.meizu</groupId>
  		<artifactId>caches</artifactId>
  		<version>0.0.1-SNAPSHOT</version>
  	</dependency>
  	<dependency>
  		<groupId>com.meizu</groupId>
  		<artifactId>cache-redis</artifactId>
  		<version>0.0.1-SNAPSHOT</version>
  	</dependency>
  </dependencies>
  <build>
  	<plugins>
  		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-jar-plugin</artifactId>
			<configuration>
				<archive>
				    <manifestFile>src/main/resources/META-INF/MAINIFEST.MF</manifestFile>
                    <manifest>
                        <!-- <addClasspath>true</addClasspath> -->
                        <!-- <classpathPrefix>lib/</classpathPrefix> -->
                        <!-- <mainClass>com.meizu.simplify.aop.AopClassFileTransformer</mainClass> -->
						<useUniqueVersions>false</useUniqueVersions>
						<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
					</manifest>
					<manifestEntries>
						<Copyright>meizu 2015</Copyright>
						<Project-name>${project.name}</Project-name>
						<Project-version>${project.version}</Project-version>
						<Build-Time>${current.timestamp}</Build-Time>
					</manifestEntries>
				</archive>
				<!-- <skip>true</skip> -->
				</configuration>
		</plugin>
  	</plugins>
  </build>
</project>